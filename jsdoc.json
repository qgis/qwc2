{
    "plugins": ["plugins/markdown", "better-docs/component"],
    "recurseDepth": 10,
    "source": {
        "includePattern": ".+\\.js(doc|x)?$",
        "excludePattern": "(^|\\/|\\\\)_"
    },
    "sourceType": "module",
    "tags": {
        "allowUnknownTags": true,
        "dictionaries": [
            "jsdoc",
            "closure"
        ]
    },
    "templates": {
        "cleverLinks": true,
        "monospaceLinks": false
    },
    "opts": {
        "destination": "./documentation/",
        "encoding": "utf8",
        "private": true,
        "recurse": true,
        "verbose": true,
        "readme": "./README.md"
    }
}